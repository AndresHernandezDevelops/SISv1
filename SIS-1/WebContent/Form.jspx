		<LABEL for="credit">Minimum Credit Taken</LABEL>
		<input type="text" name="minimumCreditTaken" id = "minimumCreditTaken" value="${minimumCreditTaken}"></input><br/>
		<br/>
		
		<input type="submit" name="report" value="Report"></input>
	</fieldset>
	
